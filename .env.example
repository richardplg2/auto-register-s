# Database Configuration
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/dahua_system
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=100

# Auto Register Service
AUTO_REGISTER_MAX_SESSIONS=1000
AUTO_REGISTER_HEARTBEAT_INTERVAL=30
AUTO_REGISTER_RECONNECT_ATTEMPTS=3
AUTO_REGISTER_RECONNECT_DELAY=5
AUTO_REGISTER_PORT=8001

# Device Management Service
DEVICE_MANAGEMENT_PORT=8000
API_SECRET_KEY=your_secret_key_here_change_this_in_production
API_RATE_LIMIT=100

# Event Accession Service
EVENT_ACCESSION_PORT=8002
EVENT_STREAM_NAME=camera_events
EVENT_CONSUMER_GROUP=event_processors
EVENT_BATCH_SIZE=10

# Webhook Dispatcher Service
WEBHOOK_DISPATCHER_PORT=8003
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5
WEBHOOK_QUEUE_NAME=webhook_jobs

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Security
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Environment
ENVIRONMENT=development
DEBUG=false
HOST=0.0.0.0
